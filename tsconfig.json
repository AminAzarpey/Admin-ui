/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "noImplicitUseStrict": false,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@admin-ui/shared/components": [
        "src/app/shared/components/index.ts"
      ],
      "@admin-ui/shared/directives": [
        "src/app/shared/directives/index.ts"
      ],
      "@admin-ui/shared/pipes": [
        "src/app/shared/pipes/index.ts"
      ],
      "@admin-ui/shared/services": [
        "src/app/shared/services/index.ts"
      ],
      "@admin-ui/core/adapters": [
        "src/app/core/adapters/index.ts"
      ],
      "@admin-ui/core/auth": [
        "src/app/core/auth/index.ts"
      ],
      "@admin-ui/core/interceptors": [
        "src/app/core/interceptors/index.ts"
      ],
      "@admin-ui/core/providers": [
        "src/app/core/providers/index.ts"
      ],
      "@admin-ui/core/services": [
        "src/app/core/services/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
